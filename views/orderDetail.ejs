<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Details</title>
  <!-- Include your CSS stylesheets or Bootstrap CDN here -->
</head>
<body>
  <div class="container mt-5">
    <h1>Order Details</h1>

    <% orders.forEach(order => { %>
      <div class="order-item">
        <h3>Order ID: <%= order.id %></h3>
        <p><strong>Order Date:</strong> <%= order.orderDate %></p>
        <p><strong>Status:</strong> <%= order.status %></p>

        <!-- Display book details related to the order -->
        <h4>Books in this Order:</h4>
        <% order.books.forEach(bookId => { %>
          <div class="book-details">
            <!-- Assuming you have access to book details elsewhere -->
            <!-- Replace 'bookDetails' with the actual variable containing book details -->
            <% const bookDetails = getBookDetailsById(bookId); %>
            <h5><%= bookDetails.title %></h5>
            <!-- Add other book details as needed -->
          </div>
        <% }); %>
      </div>
    <% }); %>
  </div>

  <!-- Include your JavaScript scripts or Bootstrap CDN here -->
</body>
</html>

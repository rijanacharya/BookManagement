<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Shopping Cart</title>
  <!-- Include your CSS stylesheets here -->
  <style>
    .cart-table {
      display: table;
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    .cart-row {
      display: table-row;
    }

    .cart-cell {
      display: table-cell;
      border: 1px solid #ddd;
      padding: 10px;
      text-align: center;
    }

    .cart-image {
      max-height: 150px;
      max-width: 100%;
      display: block;
      margin: auto;
    }
  </style>
</head>
<body>
  <div class="container mt-5" id="cart">
    <% if (cart.length > 0) { %>
      <h2>Your Shopping Cart</h2>
      <div class="cart-table">
        <div class="cart-row">
          <div class="cart-cell"><strong>Image</strong></div>
          <div class="cart-cell"><strong>Title</strong></div>
          <div class="cart-cell"><strong>Price</strong></div>
          <div class="cart-cell"><strong>Quantity</strong></div>
        </div>
        <% let total = 0; %>
        <% for (const item of cart) { %>
          <div class="cart-row">
            <div class="cart-cell">
              <img src="data:<%= item.book.image.contentType %>;base64,<%= item.book.image.data %>" alt="<%= item.book.title %>" class="img-thumbnail cart-image">
            </div>
            <div class="cart-cell">
              <h5><%= item.book.title %></h5>
            </div>
            <div class="cart-cell">
              <p>$<%= item.book.price.toFixed(2) %></p>
              <% total += item.book.price * item.quantity; %>
            </div>
            <div class="cart-cell">
              <p><%= item.quantity %></p>
            </div>
          </div>
        <% } %>
        <div class="cart-row">
          <div class="cart-cell" colspan="3"><strong>Total Price</strong></div>
          <div class="cart-cell" colspan="3"><strong></strong></div>
          <div class="cart-cell" colspan="1">$<%= total.toFixed(2) %></div>
        </div>
      </div>
      <div class="cart-row">
        <div class="cart-cell" colspan="4">
          <form action="/order/place-order" method="post">
            <button type="submit">Place Order</button>
          </form>
        </div>
      </div>
    <% } else { %>
      <p>Your cart is empty.</p>
    <% } %>
  </div>
  <!-- Include your JavaScript scripts here -->
</body>
</html>
